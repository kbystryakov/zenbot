<context>

	<input pattern="*">
        	<output>
			<item><![CDATA[
Мастер готов ремонтировать принтер
Приказывайте
]]>
			</item>
		</output>
	</input>
    
    <sample>
        <item value="Вызвать Мастера"/>
        <item value="Получить Консультацию"/>
        <item value="Посмотреть Цены"/>
    </sample>

	<input pattern="* вызвать мастера *">
	
		<output value="Мастер готов выехать к Вам"/>
		<output value="Укажите, пожалуйста, номер телефона для связи"/>
		
		<context id="phone-number">
		
			<input pattern="$Text">
               			<var name="Phone" value="$Text" scope="user"/>
             		   	<output value="Спасибо!"/>
				<output value="Мастер сейчас Вам перезвонит на номер $Phone"/>
                <context/>
         </input>
			
		</context>
		
	</input>
	
	<input pattern="* посмотреть цены *">
	
		<output>
			<item>Ремонт принтера = 1990 руб</item>
			<item>Выезд мастера при отказе от ремона = 569 руб</item>
			<item>Диагностика =  0 руб</item>
		</output>
	</input>
	
	<input pattern="* получить консультацию *">
	
		<output value='{"text":"Нажмите для звонка","tts":"Нажмите для звонка""end_session":false,"buttons":[{"title": "Получить Консультацию Сейчас", "payload": "", "url": "tel:89602440612", "hide": true}]}' />
		
	</input>

</context>
