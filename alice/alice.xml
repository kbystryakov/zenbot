<context>

<input pattern="*">
	<output value="Жду Ваших Приказаний"/>
	</input>
    
    <sample>
        <item value="Вызвать Мастера"/>
        <item value="Консультация"/>
        <item value="Цены"/>
    </sample>

	<input id="order" pattern="выз*">
		<context id="get_phone">
      			<output value="На какой номер заказать мастера?"/>
			<input pattern="$Text">
        			<var name="phone" value="$Text" scope="user"/>
        			<output value="Оформляю вызов мастера на номер $phone"/>
        			<context/>
      			</input>
		</context>

    	</input>
	
	
      	<input pattern="*цен*">
	
		<output value="Ремонт принтера = 1990 руб,   Выезд мастера при отказе от ремона = 569 руб,  Диагностика =  Бесплатно"/>
			
	</input>
	
	<input pattern="*кон*">
	
		<output value='{"text":"Нажми для связи с Мастером!","end_session":false,"buttons":[{"title": "Получить Консультацию Сейчас", "payload": "", "url": "https://ecoprint.spb.ru/call/", "hide": true}]}'/>
		
		
	</input>

</context>
